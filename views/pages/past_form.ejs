    <script>

        // Adiciona um ouvinte para o evento 'DOMContentLoaded'
        document.addEventListener('DOMContentLoaded', () => {

            // Funções para troca de páginas do formulário
            let currentPage = 0;
            const pages = document.querySelectorAll('.form-page');
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            const okBtn = document.getElementById('okBtn');
            const petForm = document.getElementById('pet-form');

            function showPage(page) {
                pages.forEach((pageElement, index) => {
                    pageElement.classList.toggle('active', index === page);
                });

                prevBtn.style.display = page === 0 ? 'none' : 'block';
                nextBtn.style.display = page === pages.length - 1 ? 'none' : 'block';
                okBtn.style.display = page === pages.length - 1 ? 'block' : 'none';
            }

            function changePage(direction) {
                if (currentPage + direction >= 0 && currentPage + direction < pages.length) {
                    currentPage += direction;
                    showPage(currentPage);
                }
            }

            // Adiciona ação aos botões
            prevBtn.addEventListener('click', () => changePage(-1));
            nextBtn.addEventListener('click', () => changePage(1));

            // Funções auxiliares para a integração com o backend
            function getElementValue(id) {
                const element = document.getElementById(id);
                return element ? element.value : '';
            }

            function getNumberValue(id) {
                const element = document.getElementById(id);
                return element ? element.value || 0 : 0;
            }

            function getCheckedRadioValue(name) {
                const options = document.getElementsByName(name);
                for (let i = 0; i < options.length; i++) {
                    if (options[i].checked) {
                        return options[i].value;
                    }
                }
                return null;
            }

            function isCheckedRadioValue(name, value) {
                return getCheckedRadioValue(name) === value;
            }

            function checkboxSave(name) {
                let options = document.getElementsByName(name);
                let checkedValues = [];
                for (let i = 0; i < options.length; i++) {
                    if (options[i].checked) {
                        checkedValues.push(options[i].value);
                    }
                }
                return checkedValues;
            }

            // Função de submit do form
            async function submitForm(event) {
                event.preventDefault();

                const formData = {
                    id: 'x',
                    name: getElementValue('name'),
                    personality: getElementValue('personality'),
                    owner: getCheckedRadioValue('owner'),
                    other_owner: getElementValue('other_owner'),
                    how_long_with: getElementValue('how_long_with'),
                    is_first: isCheckedRadioValue('is_first', 'Sim'),
                    age_got: getCheckedRadioValue('age_got'),
                    neutered: isCheckedRadioValue('neutered', 'Sim'),
                    months_neutered: getElementValue('months_neutered'),
                    breed: getCheckedRadioValue('breed'),
                    where_got: getCheckedRadioValue('where_got'),
                    other_got: getElementValue('other_where_got'),
                    price: getCheckedRadioValue('price'),
                    characteristics_keep: getElementValue('characteristics_keep'),
                    who_chose_name: getElementValue('who_chose_name'),
                    what_liked_most: getElementValue('what_liked_most'),
                    didnt_like: getElementValue('didnt_like'),
                    vet: isCheckedRadioValue('vet', 'Sim'),
                    vet_times: getNumberValue('vet_times'),
                    vet_reasons: getElementValue('vet_reasons'),
                    stop_living_with: getElementValue('stop_living_with'),
                    age_at_time: getNumberValue('age_at_time'),
                    why_stopped: getElementValue('why_stopped'),
                    another_dog: isCheckedRadioValue('another_dog', 'Sim'),
                    why: getElementValue('another_dog_why')
                };

                if (isCheckedRadioValue('other_pets', 'Sim')) {
                    let idOtherPets;
                    try {
                        const res = await fetch('/otherPet', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                authorization: localStorage.getItem('user')
                            },
                            body: JSON.stringify({
                                id: "x",
                                cats: getNumberValue('num_cats'),
                                dogs: getNumberValue('num_dogs'),
